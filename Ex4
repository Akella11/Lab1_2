class filetext:

    def char_counter(self):
        file = open('text.txt')
        data = file.read()
        print(len(data))
        file.close()

    def word_counter(self):
        with open('text.txt') as file:
            print(sum(word.count(' ') for word in iter(lambda: file.read(), '')))
        file.close()

    def sentence_counter(self):
        with open('text.txt') as file:
            print(sum(sentence.count('\n') for sentence in iter(lambda: file.read(), '')))
        file.close()


mytext = filetext
mytext.char_counter(filetext)
mytext.word_counter(filetext)
mytext.sentence_counter(filetext)

